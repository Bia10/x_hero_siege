<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/xhs_adminmod.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/custom_game/xhs_adminmod.js" />
	</scripts>
	<!-- ADMIN MOD, STILL IN DEV -->
	<Panel hittest="false" class="AdminModBorder">
		<Button id="ToggleAdminMod" class="ToggleAdminMod" onmouseover="OnMouseOver()" onmouseout="OnMouseOut();" >
			<Image src="file://{images}/custom_game/adminmod/administrator.png" />
		</Button>

		<Panel id="AdminMod">
			<Panel id="PlayerCommandsBox">
				<Label class="CommandsLabel" text="#command" id="CommandsLabel"/>
				<RadioButton class="CGSRadio" group="GameLength" id="player_commands_1" text="#tome_command" onactivate="" />
				<RadioButton class="CGSRadio" group="GameLength" id="player_commands_2" text="#info_command" onactivate="" />
			</Panel>
			<Panel id="CreditsBorder">
				<Label class="CreditsLabel" text="#credits_command" id="CreditsBorderText"/>
			</Panel>
		</Panel>
		<Label class="DualHeroTitle" text="Dual Hero Swap:" id="DualHeroText"/>
		<Button class="DualHeroTitle" id="DualHero" onmouseactivate="ToggleDualHero();" >
			<Image src="file://{images}/custom_game/adminmod/dual_hero.jpg" />
		</Button>
	</Panel>
</root>
