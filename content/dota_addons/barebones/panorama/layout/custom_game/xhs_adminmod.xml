<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/xhs_adminmod.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/custom_game/xhs_adminmod.js" />
	</scripts>
	<!-- ADMIN MOD, STILL IN DEV -->
	<Panel hittest="false" class="AdminModBorder">
		<Button id="ToggleAdminMod" class="ToggleAdminMod" onactivate="OnToggleAdminModButton();" >
			<Image src="file://{images}/custom_game/adminmod/administrator.png" />
		</Button>

		<Panel id="AdminMod">
			<Button id="CloseButton" class="CloseButton" onactivate="OnToggleAdminModButton();" >
				<Image src="file://{images}/custom_game/adminmod/close.png" />
			</Button>

			<Panel id="HostCommandsBox">
				<Label class="CommandsLabel" text="#host_command" id="CommandsLabel"/>
				<RadioButton class="CGSRadio" id="host_commands_1" text="#toggle_lane_command1" onactivate="OnToggleLane1()" />
				<RadioButton class="CGSRadio" id="host_commands_2" text="#toggle_lane_command2" onactivate="OnToggleLane2()" />
				<RadioButton class="CGSRadio" id="host_commands_3" text="#toggle_lane_command3" onactivate="OnToggleLane3()" />
				<RadioButton class="CGSRadio" id="host_commands_4" text="#toggle_lane_command4" onactivate="OnToggleLane4()" />
				<RadioButton class="CGSRadio" id="host_commands_5" text="#toggle_lane_command5" onactivate="OnToggleLane5()" />
				<RadioButton class="CGSRadio" id="host_commands_6" text="#toggle_lane_command6" onactivate="OnToggleLane6()" />
				<RadioButton class="CGSRadio" id="host_commands_7" text="#toggle_lane_command7" onactivate="OnToggleLane7()" />
				<RadioButton class="CGSRadio" id="host_commands_8" text="#toggle_lane_command8" onactivate="OnToggleLane8()" />
			</Panel>

			<Panel id="PlayerCommandsBox">
				<Label class="CommandsLabel" text="#command" id="CommandsLabel"/>
				<RadioButton class="CGSRadio" group="GameLength" id="player_commands_1" text="#tome_command" onactivate="OnBuyTomeCommand()" />
				<RadioButton class="CGSRadio" group="GameLength" id="admin_commands_2" text="#unstuck_command" onactivate="OnKillCommand()" />
			</Panel>

			<Panel id="AdminCommandsBox">
				<Label class="CommandsLabel" text="#admin_command" id="CommandsLabel"/>
				<RadioButton class="CGSRadio" group="GameLength" id="admin_commands_1" text="#freeze_command" onactivate="OnFreezeCommand()" />
				<RadioButton class="CGSRadio" group="GameLength" id="admin_commands_2" text="#unfreeze_command" onactivate="OnUnfreezeCommand()" />
				<RadioButton class="CGSRadio" group="GameLength" id="admin_commands_3" text="#poison_command" onactivate="OnPoisonCommand()" />
				<RadioButton class="CGSRadio" group="GameLength" id="admin_commands_4" text="#purge_command" onactivate="OnPurgeCommand()" />
				<RadioButton class="CGSRadio" group="GameLength" id="admin_commands_5" text="#kill_command" onactivate="OnKillCommand()" />
				<RadioButton class="CGSRadio" group="GameLength" id="admin_commands_6" text="#revive_command" onactivate="OnReviveCommand()" />
			</Panel>

			<Panel id="CreditsBorder">
				<Label class="CreditsLabel" text="#credits_command" id="CreditsBorderText"/>
			</Panel>
		</Panel>

		<Panel id="AdminTabs" hittest="false">
			<Panel id="Title">
				<Panel id="OptionSelect" hittest="false">
					<RadioButton id="PlayerButton" text="Players" onactivate="ToggleNormalTab()"/>
					<Label id="ProfileContentRightTabOptionSeparator" tabindex="auto" text="/" />
					<RadioButton id="AdminButton" text="Admins" onactivate="ToggleAdminTab()"/>
				</Panel>
				
				<Panel class="displayPanel" id="creditsDisplay" hittest="false">
					<Panel id="creditsPanel" class="creditsPanel" hittest="false">
					</Panel>
				</Panel>
			</Panel>
		</Panel>
	</Panel>
</root>
