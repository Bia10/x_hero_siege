<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/xhs_quests.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/custom_game/xhs_quests.js" />
	</scripts>

	<Panel hittest="false" class="QuestPanel">
		<Button class="QuestWC3" id="ShowQuests" onmouseactivate="OnShowQuests()">
			<Label text="Quests" />
		</Button>

		<Button id="Quest1" onmouseactivate="OnShowQuest1();" >
			<Label class="Quest1_Title" text="Phase 1:" id="QuestTitle"/>
		</Button>

		<Panel id="Quest1_Info">
			<Label text="#quest1_info" id="QuestText"/>
		</Panel>

		<Button id="Quest2" onmouseactivate="OnShowQuest2();" >
			<Label class="Quest1_Title" text="Phase 2:" id="QuestTitle"/>
		</Button>

		<Panel id="Quest2_Info">
			<Label text="quest2_info" id="QuestText"/>
		</Panel>

		<Button id="Quest3" onmouseactivate="OnShowQuest3();" >
			<Label class="Quest1_Title" text="Phase 3:" id="QuestTitle"/>
		</Button>

		<Panel id="Quest3_Info">
			<Label text="quest3_info" id="QuestText"/>
		</Panel>

		<Button id="Quest4" onmouseactivate="OnShowQuest4();" >
			<Label class="Quest1_Title" text="Special Events:" id="QuestTitle"/>
		</Button>

		<Panel id="Quest4_Info">
			<Label text="quest4_info" id="QuestText"/>
		</Panel>

		<Button id="Quest5" onmouseactivate="OnShowQuest5();" >
			<Label class="Quest1_Title" text="Additional Events:" id="QuestTitle"/>
		</Button>

		<Panel id="Quest5_Info">
			<Label text="- Hero Image:\nKill the copy of your hero (with 4x stats, not using abilities). Reward: +250 Stats.\n\n- Frost Infernal:\nKill the 'Frost Infernal' for 'Key of the 3 Moons'.\n\n- Spirit Beast:\nKill the 'Spirit Beast' for 'Shield of Invincibility'.\n\n- All Hero Images:\nKill 8 copy of your hero (with 2x stats, not using abilities). Reward: 'Necklace of Spell Immunity'." id="QuestText"/>
		</Panel>

		<Panel id="Duel_info">
			<Label text="Duel Settings:" id="DuelText0"/>
			<Label text="Armor: -80%" id="DuelText1"/>
		</Panel>
	</Panel>
</root>
