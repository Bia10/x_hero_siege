<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/custom_game/xhs_timers.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/xhs_timers.js" />
	</scripts>
	<Panel class="ScoreboardLeft">
		<Panel id="ScoreboardLeft_Parent">
			<Panel id="ScoreboardGameTime">
				<Label id="GameTime" text="#GameTime" />
				<Label id="GameTimer" text="--:--" />
			</Panel>
			<Panel id="ScoreboardSpecialEvent">
				<Label id="Goal" text="#Goal" />
				<Label id="Timer" text="--:--" />
			</Panel>
			<Panel id="ScoreboardCreepTime">
				<Label id="CreepGoal" text="#CreepGoal" />
				<Label id="CreepTimer" text="--:--" />
			</Panel>
			<Panel id="ScoreboardIncomingWaveTime">
				<Label id="IncomingWaveGoal" text="#IncomingWaveGoal" />
				<Label id="IncomingWaveTimer" text="--:--" />
			</Panel>
			<Panel id="ScoreboardSpecialEventsTime">
				<Label id="SpecialEventsGoal" text="#SpecialEventsGoal" />
				<Label id="SpecialEventsTimer" text="--:--" />
			</Panel>
		</Panel>
	</Panel>
</root>
